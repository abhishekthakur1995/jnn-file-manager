//OFF = 0, WARN = 1, ERROR = 2;
{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "modules": true,
            "jsx": true
        }
    },
    "plugins": [
        "react"
    ],
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "rules": {
        "semi": 0,
        "spaced-comment": 1,
        "space-before-function-paren": [ 1, "never" ],
        "indent": [ 0, "tab" ],
        "space-before-blocks": 1,
        "keyword-spacing": 1,
        "eol-last": 1,
        "no-trailing-spaces": 1,
        "no-mixed-spaces-and-tabs": 0,
        "no-tabs": 0,
        "no-unused-vars": 1,
        "no-console": ["warn", { "allow": ["info", "error"] }],
        "eol-last": 0,
        "no-useless-escape": 0
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.4.1"
        }
    }
}